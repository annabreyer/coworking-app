{% extends 'base.html.twig' %}
{% block title %}{{ 'user_account.vouchers.title'|trans }}{% endblock %}

{% block header %}{{ 'user_account.vouchers.title'|trans }}{% endblock %}
{% block content %}
<section>
    {% if user.vouchers.isEmpty %}
        <p>{{ 'user_account.vouchers.no_vouchers'|trans }}</p>
    {% endif %}

    <div class="my-4 mx-1">
        <a href="{{ path('voucher_index') }}" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-red-darkest bg-yellow rounded-lg hover:yellow-dark focus:ring-4 focus:outline-none focus:ring-yellow-dark dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            {{ 'user_account.vouchers.button_new'|trans }}
        </a>
    </div>

    <div class="self-center grid grid-cols-2 md:grid-cols-4">
        {% for voucher in user.vouchers %}
            <div class="block max-w-sm p-6 rounded-lg shadow m-1 {% if voucher.isValid %}bg-silverpink-light border border-silverpink hover:bg-silverpink {% else %}bg-silverpink-darkest line-through{% endif %}">
                <div class="inline-flex">
                    {% if voucher.isValid %}
                        <svg  xmlns="http://www.w3.org/2000/svg"  width="40"  height="40"  viewBox="0 0 30 30"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-ticket"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 5l0 2" /><path d="M15 11l0 2" /><path d="M15 17l0 2" /><path d="M5 5h14a2 2 0 0 1 2 2v3a2 2 0 0 0 0 4v3a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-3a2 2 0 0 0 0 -4v-3a2 2 0 0 1 2 -2" /></svg>
                    {% else %}
                        <svg  xmlns="http://www.w3.org/2000/svg"  width="40"  height="40"  viewBox="0 0 30 30"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-ticket-off"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 5v2" /><path d="M15 17v2" /><path d="M9 5h10a2 2 0 0 1 2 2v3a2 2 0 1 0 0 4v3m-2 2h-14a2 2 0 0 1 -2 -2v-3a2 2 0 1 0 0 -4v-3a2 2 0 0 1 2 -2" /><path d="M3 3l18 18" /></svg>
                    {% endif %}
                    <h5 class="mb-2 text-2xl font-bold tracking-tight{% if voucher.isValid == false %} line-through{% endif %}">
                        {{ voucher.code }}
                    </h5 >
                </div>
                <p class="font-normal">{{ 'user_account.vouchers.expiry_date'|trans }}: {{ voucher.expiryDate|date('Y-m-d') }}</p>
            </div>
        {% endfor %}
    </div>

</section>
{% endblock %}