{% extends 'base.html.twig' %}

{% block title %}{% trans %}Register{% endtrans %}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error|trans }}</div>
    {% endfor %}

    <h1>{% trans %}Register{% endtrans %}</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.firstName) }}
    {{ form_row(registrationForm.lastName) }}
    {{ form_row(registrationForm.birthDate) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Password'
    }) }}
    <p>{% trans %}I hereby accept{% endtrans %}</p>

    <div>
        {{ form_widget(registrationForm.termsOfUse) }}
        <a href="{{ path('app_terms_of_use') }}" target="_blank">{{ form_label(registrationForm.termsOfUse) }}</a>
    </div>

    <div>
        {{ form_widget(registrationForm.codeOfConduct) }}
        <a href="{{ path('app_code_of_conduct') }}" target="_blank">{{ form_label(registrationForm.codeOfConduct) }}</a>
    </div>

    <div>
        {{ form_widget(registrationForm.dataProtection) }}
        <a href="{{ path('app_data_protection') }}"
           target="_blank">{{ form_label(registrationForm.dataProtection) }}</a>
    </div>

    <button type="submit" class="btn">{% trans %}Register{% endtrans %}</button>
    {{ form_end(registrationForm) }}

    <p>{% trans %}You already have an account?{% endtrans %}<a href="{{ path('app_login') }}">{% trans %}Login{% endtrans %}</a></p>
{% endblock %}
