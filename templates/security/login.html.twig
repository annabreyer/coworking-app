{% extends 'base.html.twig' %}

{% block title %}{{ 'login.page.title'|trans }}{% endblock %}
{% block header %}{{ 'login.page.title'|trans }}{% endblock %}
{% block content %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                {{ 'You are logged in as %userIdentifier%'|trans({'%userIdentifier%': app.user.userIdentifier}) }},
                <a href="{{ path('app_logout') }}">logout</a>
            </div>
        {% endif %}

        <h2>{{ 'login.form.title'|trans }}</h2>
        <label for="username">{% trans %}email{% endtrans %}</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
               autocomplete="email" required autofocus>
        <label for="password">{% trans %}password{% endtrans %}</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn" type="submit">
            {% trans %}login.form.button{% endtrans %}
        </button>
    </form>

    <p><a href="{{ path('app_forgot_password_request') }}">{% trans %}password.forgotten{% endtrans %}?</a></p>

    <p>{% trans %}login.page.no_account_yet{% endtrans %}
        <a href="{{ path('app_register') }}">{% trans %}login.page.link.register{% endtrans %}</a>
    </p>
{% endblock %}